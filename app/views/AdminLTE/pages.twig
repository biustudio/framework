{% extends 'base.twig' %}

{% block title %}{{config['site-name']}} || Custom Pages{% endblock %}

{% block stylesheets %}
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet">
{% if config['oauth2-enabled'] %}
<link href="{{ asset('dappur/css/bootstrap-social.min.css') }}" rel="stylesheet">
{% endif %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 content-header">
                <h1 class="page-header">
                    Custom Pages <small>Overview</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> Dashboard
                    </li>
                    <li class="active">
                        <i class="fa fa-book"></i> Custom Pages
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="box box-info">
                    <div class="box-header">
                        <div class="pull-left box-title">Custom Pages </div>
                        <div class="pull-right"><a href="{{ path_for('admin-pages-add') }}" class="btn btn-xs btn-success"><span class="fa fa-fw fa-plus"></span> New Page</a></div>
                        <div style="clear: both;"></div>
                    </div>

                    <div class="box-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="users_table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Route</th>
                                    <th>Roles</th>
                                    <th>Permission</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/responsive.bootstrap.min.js"></script>

<script>
$(document).ready(function() {

    $('#users_table').DataTable({
        responsive: true,
        stateSave: true,
        "processing": true,
        "serverSide": true,
        "ajax":{
                 "url": "/dashboard/pages/datatables",
                 "dataType": "json",
                 "type": "GET"
               },
        "columns": [
            { "data": "name" },
            {
                "data": "pattern",
                "orderable": false,
                "render": function ( data, type, full, meta ) {
                    return "/"+data;
                    
                }
            },
            {
                "data": "roles",
                "orderable": false,
                "render": function ( data, type, full, meta ) {
                    if (data.length) {
                        var roles = [];
                        $.each(data, function( key, value ) {
                            roles.push(value.name);
                        });
                        return roles.join(', ');
                    }else{
                        return '<center><i class="fa fa-close" style="color: red;"></i></center>';
                    }
                    
                }
            },
            {
                "data": "permission",
                "orderable": false,
                "render": function ( data, type, full, meta ) {
                    if (data) {
                        return data;
                    }else{
                        return '<center><i class="fa fa-close" style="color: red;"></i></center>';
                    }
                }
            },
            { 
                "data": "id",
                "orderable": false,
                "render": function ( data, type, full, meta ) {
                    var result = "";
                    {% if auth.hasAccess('pages.update') %}
                    var result = result + ' <a href="/dashboard/pages/edit/'+data+'" class="btn btn-primary btn-xs" title="Edit User">'+
                        '<span class="fa fa-fw fa-pencil"></span>'+
                    '</a>';

                    {% endif %}
                    {% if auth.hasAccess('pages.delete') %}
                        var result = result + ' <form action="/dashboard/pages/delete" method="post" style="display: inline;" title="Delete User">'+
                            '<input type="hidden" name="page_id" value="'+data+'" />'+
                            '{{csrf()}}'+
                            '<button class="btn btn-danger btn-xs swal-confirm" data-swtitle="Are you sure?" data-swmessage="This page will be permanently deleted and you will not be able to recover it.">'+
                                '<span class="fa fa-fw fa-close"></span>'+
                            '</button>'+
                        '</form>';
                    {% endif %}
                    return result;
                }
            }
        ]

    });

    $('#roles_table').DataTable({
        responsive: true,
        stateSave: true

    });
});
</script>
{% endblock %}